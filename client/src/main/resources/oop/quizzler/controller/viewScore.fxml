<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.quizzler.controller.ViewScoreController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="root" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="39.0" prefWidth="202.0" text="Your Score:" />
               </children>
            </HBox>
            <Label fx:id="scoreResults" />
            <HBox alignment="CENTER" prefHeight="137.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="play" onAction="#switchToMenu" text="Menu" />
                  <Button fx:id="create" mnemonicParsing="false" onAction="#switchToHighscores" text="View Highscores" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
         <stylesheets>
            <URL value="@../../../../java/oop/quizzler/controller/style.css" />
            <URL value="@../../../../java/oop/quizzler/controller/style.css" />
         </stylesheets>
      </VBox>
   </children>
</AnchorPane>
